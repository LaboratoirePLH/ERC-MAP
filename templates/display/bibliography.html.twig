<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th scope="row">
                {{ 'generic.fields.type'|trans}}
            </th>
            <td>
                {{ (bibliography.estCorpus ? 'biblio.fields.corpus' : 'biblio.fields.bibliographic')|trans }}
            </td>
        </tr>
        <tr>
            <th scope="row">
                {{ 'biblio.fields.titre_abrege'|trans}}
            </th>
            <td>
                {{ bibliography.titreAbrege }}
            </td>
        </tr>
        <tr>
            <th scope="row">
                {{ 'biblio.fields.titre_complet'|trans}}
            </th>
            <td>
                {{ bibliography.titreComplet }}
            </td>
        </tr>
        {% if not bibliography.estCorpus %}
        <tr>
            <th scope="row">
                {{ 'biblio.fields.auteur'|trans}}
            </th>
            <td>
                {{ bibliography.auteurBiblio }}
            </td>
        </tr>
        <tr>
            <th scope="row">
                {{ 'biblio.fields.annee'|trans}}
            </th>
            <td>
                {{ bibliography.annee }}
            </td>
        </tr>
        {% endif %}
    </tbody>
</table>