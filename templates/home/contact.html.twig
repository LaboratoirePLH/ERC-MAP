{% extends 'page.html.twig' %}
{% block title %}
    {{ ('nav.contact')|trans }}
{% endblock %}
{% block content %}
    <div class="col-12 col-xl-6 offset-xl-3">
        <form action="" method="post" id="contact">
            {% if not is_granted('ROLE_USER') %}
                <div class="form-group row">
                    <label class="col-form-label col-3 text-right" for="name">
                        {{"generic.fields.nom"|trans}}
                    </label>
                    <div class="col-9">
                        <input type="text" name="name" id="name" class="form-control" required/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-3 text-right" for="email">
                        {{"chercheur.fields.mail"|trans}}
                    </label>
                    <div class="col-9">
                        <input type="text" name="email" id="email" class="form-control" required/>
                    </div>
                </div>
            {% endif %}
            <div class="form-group row">
                <label class="col-form-label col-3 text-right" for="subject">
                    {{"mails.contact.subject"|trans}}
                </label>
                <div class="col-9">
                    <input type="text" name="subject" id="subject" class="form-control" required/>
                </div>
            </div>
            <div class=" form-group row">
                <label class="col-form-label col-3 text-right" for="message">
                    {{"generic.fields.message"|trans}}
                </label>
                <div class="col-9">
                    <textarea name="message" id="message" rows="5" class="form-control" required></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 text-center">
                    <button class="btn btn-primary" type="submit" name="send">
                        <i class="fas fa-paper-plane fa-fw"></i>
                        {{ 'generic.send'|trans }}
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
