{% extends 'base.html.twig' %}

{% block title %}{{'login_page.input_new_password'|trans}}{% endblock %}

{% block bodyclass %}login-page{% endblock %}
{% block body %}
<div class="container">
    <div class="row justify-content-center" style="margin-top: 100px">
        <div class="col-8 text-center">
            <img src="{{ asset('build/images/logo-ercmap.png') }}" class="w-100" />
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-8">
            <h2 class="text-center">
                {{'login_page.input_new_password'|trans}}
            </h2>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-8">
            <form method="post">
                {% if error is defined %}
                <div class="alert alert-danger" role="alert">
                    <span class="badge badge-danger text-uppercase">
                        {{ 'generic.messages.error'|trans }}
                    </span>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
                {% endif %}
                <div class="form-group row">
                    <label class="col-form-label col-2 required" for="password">
                        {{ 'login_page.form.password'|trans }}
                    </label>
                    <div class="col-10">
                        <input type="password" id="password" name="password" required="required" class="form-control"
                            autocomplete="off">
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password') }}">
                <div class="form-group row">
                    <div class="col-12 text-center">
                        <button type="submit" id="reset_password" name="reset_password" class="btn-primary btn">
                            {{ 'login_page.form.reset_password'|trans }}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}