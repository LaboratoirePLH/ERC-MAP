{% block buttonBarCritere %}
    <div class="row">
        <div class="col-12 table-buttons">
            <button
                class="btn btn-warning clear-filter-button" onclick="clearFilters(1)" type="button">
                {#Bouton pour réinitialiser les filtres #}
                {{ 'generic.clear_filters'|trans }}
            </button>
            <button class="btn btn-primary" onclick="ajouterFiltre()" type="button">
                {{ 'generic.add' |trans }}</button>
            {# Ajouter une requête #}
            <br/>
            <br/>
        </div>
    </div>
{% endblock %}

