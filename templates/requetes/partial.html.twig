{% block buttonGeneric %}
<div class="row">
    <div class="col-12 table-buttons">
        <button class="btn btn-info" data-target="#exampleModal" data-toggle="modal"
            type="button">{{ 'generic.save' |trans }}</button>
        {#Bouton pour sauvegarder la requête #}
        <button class="btn btn-success" onclick="executerRequete()" type="button">
            {{ 'generic.search' |trans }}
        </button>
        {#Bouton pour lancer la requête #}
        <br />
        <br />
    </div>
</div>
{% endblock %}

{% block typeDonnee %}
<br />
<div class="div_type_donnee" id="div_type_donnee">
    <form class="form_afficher">
        <select class="select_type_donnee form-control col-md-2" id="select_type_donnee" name="select_type_donnee"
            onchange="selectTypeDonnee(this)">
            <option disabled="disabled" selected="selected" value="" key="-1">{{ 'requetes.selection_vide' | trans }}
            </option>
