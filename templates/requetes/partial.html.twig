            <option value="Source">{{ 'source.name' | trans }}</option>
        </select>
    </form>
</div>
<br />
{% endblock %}

{% block ajoutBox1 %}
<div class="select_div row">
    <div class="span_box1 col-md-2">
        <select class="select_box1 form-control" name="select_box1" onchange="secondeBox(this)">
            <option disabled="disabled" key="-1" selected="selected" value="">{{ 'requetes.selection_vide' | trans }}
            </option>
        </select>
    </div>
    <div class="span_box2 col-md-2 padding-0">
        <select class="select_box2 form-control" name="select_box2" onchange="troisiemeBox(this)"
            style="visibility:hidden">
            <option disabled="disabled" key="-1" selected="selected" value="">{{ 'requetes.selection_vide' | trans }}
            </option>
        </select>
    </div>
    <div class="span_box3 col-md-2 padding-0">
        <select class="select_box3 form-control" name="select_box3" onchange="quatriemeBox(this)"
            style="visibility:hidden">
            <option disabled="disabled" key="-1" selected="selected" value="">{{ 'requetes.selection_vide' | trans }}
            </option>
        </select>
    </div>
    <div class="span_box4 col-md-2 padding-0"></div>
    <div class="col-md-3 padding-0">
        <button class="btn_suppr_critere btn btn-danger" onclick="removeFiltre(this)"
            type="button">{{ 'generic.delete' | trans }}</button>
        <div class="btn-group btn-group-toggle boutonsEtOu" data-toggle="buttons">
            <label checked class="btn btn-secondary active Et">
                <input autocomplete="off" name="options" type="radio">{{ 'requetes.et' |trans }}</label>
            <label class="btn btn-secondary Ou">
                <input autocomplete="off" name="options" type="radio">{{ 'requetes.ou' |trans }}</label>
        </div>
        <button type="button buttonDupliquer" onclick="dupliquer(this)"
            class="btn btn btn-primary btn-orange-brule">{{ 'requetes.dupliquer' |trans }}</button>
    </div>
</div>
<br />
{% endblock %}

{% block champAffiche %}
<div class="div_champ_affiche row">
    <div class="span_box_champAffiche_1 col-md-2">
        <select class="select_box_champAffiche_1 form-control" name="select_box_champAffiche_1"
            onchange="secondeBoxChampAffiche(this)">
            <option disabled="disabled" key="-1" selected="selected" value="-1">{{ 'requetes.selection_vide' | trans }}
            </option>
        </select>
    </div>
    <div class="span_box_champAffiche_2 col-md-2 padding-0">
        <select class="select_box_champAffiche_2 form-control" name="select_box2"
            onchange="troisiemeBoxChampAffiche(this)" style="visibility:hidden"></select>
    </div>
    <div class="span_box_champAffiche_3 col-md-1 padding-0">
        <select class="select_box_champAffiche_3 form-control" name="select_box3" onchange="changerSelected(this)"
            style="visibility:hidden"></select>
    </div>
    <div class="col-2 padding-0">
        <button class="btn_suppr btn btn-danger btn_suppr_champAffiche" onclick="removeFiltre(this)"
            type="button">{{ 'generic.delete' | trans }}</button>
    </div>
</div>
<br />
{% endblock %}

{% block modal_bootstrap %}
<!-- Modal, fênetre pour le nom de la requête -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ 'requetes.modal_nom_req' | trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" required class="text_input input_req" id="input_modal"
                    style="margin-left: auto; margin-right: auto; display: block;">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                    data-dismiss="modal">{{ 'requetes.modal_fermer' | trans }}</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal"
                    onclick="sauvegarderRequete()">{{ 'requetes.modal_sauvegarder' | trans }}</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

