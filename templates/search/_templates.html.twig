        <div class="col-sm-2 d-flex flex-column justify-content-around align-items-center">
            <div class="custom-control custom-switch select-strict">
                <input type="checkbox" class="custom-control-input" id="name_mode" name="name_mode" value="all">
                <label class="custom-control-label" for="names_mode">{{ 'generic.fields.require_all'|trans }}</label>
            </div>
            <div class="custom-control custom-switch nameselect-indirect">
                <input type="checkbox" class="custom-control-input" id="name_indirect" name="name_indirect"
