                <label class="custom-control-label" for="name_indirect">{{ ('element.fields.theonymes')|trans
                    }}</label>
                <i class="fas fa-question-circle" data-toggle="tooltip" data-placement="top" data-html="true"
                    title="{{ 'search.help.theonymes'|trans|raw }}"></i>
            </div>
        </div>
        {{ removeCriteriaButton }}
    </div>
